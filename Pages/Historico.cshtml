@page
@model MyApp.Namespace.HistoricoModel
@{
    <h1>Historico de ações</h1>

@if (Model.Logs == null || !Model.Logs.Any())
{
    <p class="msg-produtos"><strong>Sem logs no sistema</strong></p>
}
else
{
    <table border="1" cellpadding="5" cellspacing="0" class="tabela-produtos">
        <thead>
            <tr>
                <th>Nome do Produto</th>
                <th>Tipo de operação</th>
                <th>Quantidade</th>
                <th>Data da operação</th>
            </tr>
        </thead>
        <tbody class="historico-estoque">
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.NomeProduto</td>
                    <td>@log.TipoOperacao</td>
                    <td>@log.Quantidade</td>
                    <td>@log.DataOperacao.ToString("dd/MM/yyyy HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
}
}
