@page
@model EditarListaModel
@{
    ViewData["Title"] = "Editar produto";
}

<h1>Editar produto</h1>

<form method="post">
    <input type="hidden" asp-for="Produto.Id">

    <label>Nome:</label>
    <input asp-for="Produto.Nome">

    <label>Preço:</label>
    <input asp-for="Produto.Preco" type="number" step="0.01">

    <label>Quantidade:</label>
    <input asp-for="Produto.Quantidade" type="number">

    <button type="submit">Salvar</button>
</form>
